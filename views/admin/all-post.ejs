<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <base href=""/>
    <meta name="description" content=""/>
    <meta name="keywords" content=""/>
    <meta name="copyright" content=""/>
    <title>All Post</title>

    <link rel="shortcut icon" type="image/x-icon" href="images/icon-logo.png"/>
    <link href="../../css/bootstrap.min.css" rel="stylesheet"/>
    <link href="../../css/layout.css" rel="stylesheet"/>

    <script src="../../js/jquery.min.js">x</script>
    <script src="../../js/bootstrap.min.js"></script>
    <script src="../../js/chart.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>

</head>
<body>
<div class="container-fluid padding0">
    <%- include('partials/header-admin'); %>
    <div id="main">
        <%- include('partials/navbar'); %>
        <h1><span class="glyphicon glyphicon-globe addtop" aria-hidden="true"></span>&nbsp;&nbsp;Post</h1>
        <div id="sub-main">
            <div class="row">
                <div class="col-xs-12 col-sm-7 col-md-8 col-lg-9">
                    <ol class="breadcrumb">
                        <li>Post</li>
                        <li class="active">All Post</li>
                    </ol>
                </div>
            </div>
            <div class="row space-top">
                <div class="col-xs-12 col-sm-5 col-md-7 col-lg-7">
                    <div class="btn btn-danger btn-lg">
                        <a href="/admin/add-post">Add Post</a>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-7 col-md-5 col-lg-5">
                    <div class="input-group text-right">
                        <input type="text" class="form-control" placeholder="Search">
                        <span class="input-group-btn">
									<button class="btn btn-danger" type="button">Search</button>
								</span>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row space-top box-total">z
                        <div class="col-xs-12 col-sm-8 col-md-7 col-lg-6">
                            <span><i>Total Post: </i><strong><%= data.length  %></strong></span>
                        </div>
                    </div>
                    <div class="row margin0 space">
                        <div class="col-xs-12 col-sm-5 col-md-4 col-lg-3 padding0">
                            <div class="form-inline">
                            </div>
                        </div>

                        <div class="col-xs-12 col-sm-7 col-md-8 col-lg-9 text-right padding0">
                            <div class="btn btn-danger btn-a">
                                <a href="#">Delete All</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row margin0">
                        <div class="table-responsive table-sanpham">
                            <table class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th><input type="checkbox" value=""/></th>
                                    <th>Title</th>
                                    <th>Detail</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <%
                                for (var i = data.length - 1 ; i >= 0 ; i--) {
                                %>
                                    <tr>
                                        <td><input type="checkbox" value=""/></td>
                                        <td><b><%= data[i].title %></b></td>
                                        <td><b><%= data[i].detail %></b></td>
                                        <td>
                                            <a href="/admin/edit-post/<%= data[i]._id %>" class="btn btn-info" disabled="">Edit</a>
                                            <a href=""></a>
                                            <a href="#" id="<%= data[i]._id %>" class=" btn-delete btn btn-danger" >Delete</a>
                                        </td>
                                    </tr>
                                <%
                                }
                                %>
                                <tr>
                                    <th></th>
                                    <th>Title</th>
                                    <th>Detail</th>
                                    <th>Action</th>
                                </tr>
                            </table>
                        </div>
                        <nav>
                            <ul class="pagination">
                                <li>
                                    <a href="#" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                                <li class="active"><a href="#">1</a></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">4</a></li>
                                <li><a href="#">5</a></li>
                                <li>
                                    <a href="#" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    const arrayBtnDelete = document.getElementsByClassName('btn-delete');
    for (let i = 0; i < arrayBtnDelete.length; i++) {
        arrayBtnDelete[i].onclick = function () {
            if (confirm('Are You Sure?')) {
                var xhr = new XMLHttpRequest();
                xhr.onreadystatechange = function () {
                    if (this.readyState == 4 && this.status == 200) {
                        alert('Success');
                        window.location.reload();
                    }
                }
                xhr.open('POST', '/admin/delete-post/' + this.id);
                xhr.send();
            }
        }
    }
</script>
</body>
</html>