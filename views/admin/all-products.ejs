    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>

</head>
<body>
<div class="container-fluid padding0">
    <%- include('partials/header-admin'); %>
    <div id="main">
        <nav class="navbar navbar-default">
            <ul class="nav navbar-nav navbar-right">
                <li class="active-child"><a href="#">FPT Aptech</a></li>
                <li class="dropdown active">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                       aria-expanded="false">Admin<span class="caret caret-fix"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="#"><span class="glyphicon glyphicon-envelope"
                                              aria-hidden="true">&nbsp;</span>Messenger</a></li>
                        <li><a href="#"><span class="glyphicon glyphicon-wrench"
                                              aria-hidden="true">&nbsp;</span>Change Password</a></li>
                        <li role="separator" class="divider"></li>
                        <li><a href="#"><span class="glyphicon glyphicon-off" aria-hidden="true">&nbsp;</span>Logout</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
        <h1><span class="glyphicon glyphicon-globe addtop" aria-hidden="true"></span>&nbsp;&nbsp;Overview</h1>
        <div id="sub-main">
            <div class="row">
                <div class="col-xs-12 col-sm-7 col-md-8 col-lg-9">
                    <ol class="breadcrumb">
                        <li>Product</li>
                        <li class="active">All Product</li>
                    </ol>
                </div>
            </div>
            <div class="row space-top">
                <div class="col-xs-12 col-sm-5 col-md-7 col-lg-7">
                    <div class="btn btn-danger btn-lg">
                        <a href="/admin/add-product">Add Product</a>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-7 col-md-5 col-lg-5">
                    <div class="input-group text-right">
                        <input type="text" class="form-control" placeholder="Search">
                        <span class="input-group-btn">
									<button class="btn btn-danger" type="button">Search</button>
								</span>
                    </div>
                </div>
            </div>
            <div class="row space-top box-total">
                <div class="col-xs-12 col-sm-8 col-md-7 col-lg-6">
                    <span><i>Total Products: </i><strong>124</strong></span>
                </div>
            </div>
            <div class="row margin0 space">
                <div class="col-xs-12 col-sm-5 col-md-4 col-lg-3 padding0">
                    <div class="form-inline">
                        <select class="form-control">
                            <option>Ruby</option>
                            <option>None</option>
                            <option>None</option>
                            <option>None</option>
                        </select>
                        <button type="submit" class="btn btn-danger">L·ªçc</button>
                    </div>
                </div>

                <div class="col-xs-12 col-sm-7 col-md-8 col-lg-9 text-right padding0">
                    <div class="btn btn-danger btn-a">
                        <a href="#">Delete All</a>
                    </div>
                </div>
            </div>
            <div class="row margin0">
                <div class="table-responsive table-sanpham">
                    <table class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th><input type="checkbox" value=""/></th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Hastag</th>
                        </tr>
                        </thead>
                        <%
                        for (var i = 0; i < data.length; i++) {
                        %>
                        <tr>
                            <td><input type="checkbox" value=""/></td>
                            <td><img class="img-responsive" src="<%= data[i].thumbnail %>" alt=""/></td>
                            <td><%= data[i].name %></td>
                            <td><%= data[i].price %></td>
                            <td><%= data[i].status %></td>
                            <td><%= data[i].tag %></td>
                            <td>
                                <a href="#">Edit |</a>
                                <a href="#" class="btn-delete" id="<%= data[i]._id %>">Delete</a>
                            </td>
                        </tr>
                        <%
                        }
                        %>
                    </table>
                </div>
                <nav>
                    <ul class="pagination">
                        <li>
                            <a href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="active"><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li>
                            <a href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
<script>
    const arrayBtnDelete = document.getElementsByClassName('btn-delete');
    for (let i = 0; i < arrayBtnDelete.length; i++) {
        arrayBtnDelete[i].onclick = function () {
            if(confirm('Are You SUre?')){
                var xhr = new XMLHttpRequest();
                xhr.onreadystatechange = function(){
                    if(this.readyState==4 &&  this.status == 200){
                        alert('Success');
                        window.location.reload();
                    }
                }
                xhr.open('POST', '/admin/delete/' + this.id);
                xhr.send();
            }
        }
    }
</script>
</body>
</html>