<div class="row">
    <div class="col-xs-12 col-sm-7 col-md-8 col-lg-9">
        <ol class="breadcrumb">
            <li>Hệ thống</li>
            <li class="active">Tổng quan</li>
        </ol>
    </div>
    <div class="hidden-xs col-sm-5 col-md-4 col-lg-3 text-right">
        <p id="date"></p>
        <script>
            var getTime = setInterval(function () {
                Clock()
            }, 1000);

            function Clock() {
                n = new Date();
                mi = n.getMinutes();
                se = n.getSeconds();
                h = n.getHours();
                y = n.getFullYear();
                m = n.getMonth() + 1;
                d = n.getDate();
                if (10 > d) {
                    d = "0" + d
                }
                if (10 > m) {
                    m = "0" + m
                }
                if (10 > h) {
                    h = "0" + h
                }
                if (10 > mi) {
                    mi = "0" + mi
                }
                if (10 > se) {
                    se = "0" + se
                }
                document.getElementById("date").innerHTML = h + ":" + mi + ":" + se + " " + m + "/" + d + "/" + y;
            }
        </script>
    </div>
</div>